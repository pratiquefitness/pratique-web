import React, { useState } from "react";
import "./Slider.css";
import BtnSlider from "./BtnSlider";
import Image from "../../../assets/image/image-slider.png";
import { Colors } from "../../../assets/colors";

export default function Slider({ exercicios, next, finalizar }) {
  const [slideIndex, setSlideIndex] = useState(1);

  const nextSlide = (e) => {
    e.preventDefault();
    if (slideIndex < exercicios.length) {
      setSlideIndex(slideIndex + 1);
      next();
      return;
    }
    if (slideIndex == exercicios.length) {
      finalizar();
      return;
    }
  };

  const prevSlide = (e) => {
    e.preventDefault();
    if (slideIndex !== 1) {
      setSlideIndex(slideIndex - 1);
    } else if (slideIndex === 1) {
      setSlideIndex(exercicios.length);
    }
  };

  const moveDot = (index) => {
    setSlideIndex(index);
  };

  return (
    <div className="container-slider">
      {exercicios?.map((obj, index) => {
        return (
          <div
            key={obj?.id}
            className={slideIndex === index + 1 ? "slide-active" : "slide"}
            style={{ padding: 0, margin: 0, borderColor: Colors.gray2 }}
          >
            <div style={{ overflow: "hidden" }} className="image">
              <img style={{ width: "60vw" }} src={obj?.thumb} alt="" />
            </div>

            <h4>{obj?.nome}</h4>
            <div className="packdeck-container">
              <div className="packdeck">
                <p>Séries</p>
                <p>{obj?.series}x</p>
              </div>
              <div className="packdeck">
                <p>Repetições</p>
                <p>{obj?.repeticoes}</p>
              </div>
              <div className="packdeck">
                <p>Descanso</p>
                <p>{obj?.descanco}s</p>
              </div>
            </div>
          </div>
        );
      })}
      <div onClick={nextSlide} className="container-button">
        <button>Feito!</button>
      </div>

      <div className="container-dots">
        {exercicios?.map((item, index) => (
          <div
            onClick={() => moveDot(index + 1)}
            className={slideIndex === index + 1 ? "dot active" : "dot"}
          ></div>
        ))}
      </div>
    </div>
  );
}
